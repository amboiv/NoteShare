<div class="col-md-4" data-id="<%= course.id %>">
	<div class="card mb-4 box-shadow">
		<%= image_tag course.thumbnail.to_s, height:200 unless course.thumbnail.nil? %>
		
		<div class="card-body">
			<p class="card-text"><%= link_to course.name, notes_in_course_path(chosen_course_id: course.id) %> | <%= course.code %> </p>
			<div class="d-flex justify-content-between align-items-center">
				<div class="btn-group">
					<button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to  "Edit Course", edit_course_path(course.id) %></button>
					<button type="button" class="btn btn-sm btn-outline-danger"><%= link_to "Destroy Course", course_path(course.id), class: "text-secondary", method: :delete, data: { confirm: 'Are you sure you want to delete the course?' } %></button>
				</div>
				<small class="text-muted"><%= course.credits %> credits</small>
			</div>
		</div>
	</div>
</div>