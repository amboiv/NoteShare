<div class="col-md-4" data-id="<%= course.id %>">
	<div class="card mb-4 box-shadow">
		<%= image_tag course_image(course.thumbnail, 'thumbnail'), height:200, class: 'card-img' %>
		
		<div class="card-body">
			<p class="card-text"><%= link_to course.name, course_show_path(course) %> | <%= course.code %> </p>
			<div class="d-flex justify-content-between align-items-center">
				<div class="btn-group">
					<%= link_to "Notes", course_notes_path(course.slug), class: "btn btn-sm btn-outline-secondary" %>
					<% if logged_in?(:instructor) %>
						<%= link_to "Edit", edit_course_path(course.id), class: "btn btn-sm btn-outline-secondary" %>
						<%= link_to "Remove", 
									course_path(course.id), 
									class: "btn btn-sm btn-outline-danger text-secondary", 
									method: :delete, data: { confirm: 'Are you sure you want to delete the course?' } %>
					<% end %>
				</div>
				<small class="text-muted"><%= course.credits %> credits</small>
			</div>
		</div>
	</div>
</div>