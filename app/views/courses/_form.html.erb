<%= form_with(model: course, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= form.label :code %>
        <%= form.text_field :code, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :credits %>
        <%= form.text_field :credits, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :thumbnail %>
        <%= form.file_field :thumbnail %>
      </div>
      <div class="form-group">
        <%= form.label :main_image %>
        <%= form.file_field :main_image %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control", rows: 15 %>
      </div>

      <div class="form-group">
        <%= form.submit "Save Course", class: "btn btn-primary btn-block"%>
      </div>
    </div>
  </div>
<% end %>