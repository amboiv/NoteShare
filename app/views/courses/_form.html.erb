<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <% course.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Error!", sticky: false) %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= form.label :code %>
        <%= form.text_field :code, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :credits %>
        <%= form.text_field :credits, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label class="btn btn-primary">
          Pick your thumbnail image <%= form.file_field :thumbnail, style: 'display:none' %>
        </label>        
      </div>
      <div class="form-group">
        <label class="btn btn-primary">
          Pick your main image <%= form.file_field :main_image, style: 'display:none' %>
      </label> 
      </div>
    </div>

    <div class="col-md-12">    
      <h2>Add Course To Education Programs</h2>
      <div class="form-group">
        <%= form.collection_select(:education_program_ids, EducationProgram.all, :id, :title) %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control", rows: 15 %>
      </div>

      <div class="form-group">
        <%= form.submit "Save Course", class: "btn btn-primary btn-block"%>
      </div>
    </div>
  </div>
<% end %>