<h1>Courses</h1>

<%= link_to  "Create a New Course", new_course_path %>

<% @courses.each do |c| %>
    <p><%= c.name %></p>
    <p><%= c.code %></p>
    <p><%= c.credits %></p>
    <p><%= c.description %></p>
    <%= image_tag c.thumbnail unless c.thumbnail.nil? %>
    <br>
    <%= link_to  "Edit Course ^", edit_course_path(c.id) %>
<% end %>