<h1>Courses</h1>

<%= link_to  "Create a New Course", new_course_path %>
<hr>
<% @courses.each do |c| %>
    <p><%= link_to c.name, course_path(c.id) %></p>
    <p><%= c.code %></p>
    <p><%= c.credits %></p>
    <p><%= c.description %></p>
    <%= image_tag c.thumbnail unless c.thumbnail.nil? %>
    <br>
    <%= link_to  "Edit Course ^", edit_course_path(c.id) %>
    <%= link_to "Destroy Course", course_path(c.id), method: :delete, data: { confirm: 'Are you sure you want to delete the course?' } %>
    <hr>
<% end %>