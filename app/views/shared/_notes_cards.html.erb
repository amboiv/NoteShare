<div class="row">
  <div class="col-md-6">
    <%= link_to new_course_note_path(params[:course_id]) do %>
      <div class="card flex-md-row mb-4 box-shadow h-md-200">
        <div class="card-body d-flex flex-column align-items-start">
          <h3 class="mb-0">Post a new note</h3>
          <p class="card-text mb-auto">Add a new note to the collection.</p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= link_to course_show_path(params[:course_id]) do %>
      <div class="card flex-md-row mb-4 box-shadow h-md-200">
        <div class="card-body d-flex flex-column align-items-start">
          <h3 class="mb-0"><%= params[:course_id].titleize %></h3>
          <p class="card-text mb-auto">See curriculum.</p>
        </div>
      </div>
    <% end %>
  </div>
</div>

