<%= form_with(model: note, local: true) do |form| %>
  <% if note.errors.any? %>
    <% note.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Error!", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :course %>
    <%= collection_select(:note, :course_id, Course.all, :id, :name, {}, {class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, rows: 20, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Post Note", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
