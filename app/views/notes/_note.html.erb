<div class="blog-post">
    <h2 class="blog-post-title"><%= link_to note.title, note %></h2>
    <p class="blog-post-meta">Posted <%= distance_of_time_in_words(note.created_at, Time.now) %> ago, by <%= note.user.name %> </p>
    <p class="blog-post-meta">
        <% if (note.user_id == current_user.id) %>
            <%= link_to 'Edit | ', edit_note_path(note) %>
            <%= link_to 'Remove Note', note, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
    </p>

    <p><%= markdown(note.body.truncate(40)) %></p>
    <hr>
</div>